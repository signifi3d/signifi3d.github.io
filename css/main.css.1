.container {
  display: flex;
  flex-direction: row;
}

.header {
  width: 20%;
  position: fixed;
  height: 100%;
  background-color: #f8f9fa;
  overflow: auto;
}

.content {
  width: 60%;
  margin-left: 20%;
  padding: 20px;
  overflow: auto;
}

.margin {
  width: 20%;
  position: fixed;
  right: 0;
  height: 100%;
  background-color: #f8f9fa;
}

.menu ul {
  list-style-type: none;
  padding: 0;
}

.menu ul li a {
  text-decoration: none;
  color: #333;
}

.menu ul li a:hover {
  color: #007bff;
}

